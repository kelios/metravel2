{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    // ✅ современный JSX для TS >= 4.1
    "jsx": "react-jsx",

    // ✅ не переопределяем "module" — оставляем из expo/tsconfig.base (ESNext)
    // "module": "esnext" // можно явно указать, но лучше не переопределять

    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",

    // ✅ алиас @ на корень репо
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    },

    // если реально используешь отдельную папку под типы — ок; иначе можно убрать
    "typeRoots": ["./src/types", "./node_modules/@types"],

    "skipLibCheck": true,
    "types": ["jest", "node"]
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": [
    "components/ui/examples/**/*",
    "components/ui/ModernTravelCard.tsx"
  ]
}
